<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1xamarinforms.Views.MainPage">

    <ScrollView>
        <Grid ColumnDefinitions="*" RowDefinitions="4*,auto,auto,auto,auto,*">
            <Image Grid.Column="0" Grid.Row="0"  Source="Intec.jpg" />
            <Editor Grid.Column="0" Grid.Row="1" Placeholder="Email" Text="{Binding Name}"/>
            <Entry Grid.Column="0" Grid.Row="2" Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
            <Button Grid.Column="0" Grid.Row="3" BackgroundColor="Red" TextColor="White" Text="Login" Command="{Binding Login}"/>
            <Label Grid.Column="0" Grid.Row="4" Text="Register"  TextColor="Red" HorizontalOptions="Center"/>

        </Grid>
    </ScrollView>

</ContentPage>
