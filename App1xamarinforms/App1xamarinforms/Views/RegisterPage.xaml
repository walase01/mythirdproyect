<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1xamarinforms.Views.RegisterPage">

    <ScrollView>

        <Grid Padding="10" ColumnDefinitions="*" RowDefinitions="auto,3*,auto,auto,auto,auto,auto,*" >
            <Image Grid.Column="0" Grid.Row="1"  Source="Intec.jpg" />
            <Editor Grid.Column="0" Grid.Row="2" Placeholder="Name" Text="{Binding Name}"/>
            <Editor Grid.Column="0" Grid.Row="3" Placeholder="Email" Text="{Binding Email}"/>
            <Entry  Grid.Column="0" Grid.Row="4" Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
            <Entry  Grid.Column="0" Grid.Row="5" Placeholder="Confirm Password" IsPassword="True" Text="{Binding ConfirmPasword}"/>
            <Button Grid.Column="0" Grid.Row="6" BackgroundColor="Red" TextColor="White" Text="Login" Command="{Binding LoginCommand}"/>
        </Grid>
        
    </ScrollView>
    
</ContentPage>